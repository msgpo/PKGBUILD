# Maintainer: Vlad Zagorodniy <vladzzag@gmail.com>
pkgname=capitaine-cursors
pkgver=2.1.r3.g960f9e9
pkgrel=1
pkgdesc="An x-cursor theme inspired by macOS and based on KDE Breeze"
arch=('any')
url="https://github.com/keeferrourke/capitaine-cursors"
license=('GPL3')
makedepends=(git)
source=('git+https://github.com/keeferrourke/capitaine-cursors')
md5sums=('SKIP')

pkgver() {
    cd "$srcdir/$pkgname"
    printf "%s" "$(git describe --long --tags | sed -r 's/^r//;s/([^-]*-)g/r\1g/;s/-/./g')"
}

package() {
    cd "$srcdir/$pkgname"
    install -d $pkgdir/usr/share/icons
    cp -pr dist $pkgdir/usr/share/icons/capitaine_cursors
}
